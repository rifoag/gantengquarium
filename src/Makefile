# Masukkan semua file cpp Anda
OBJS = main.cpp oop.cpp

CC = g++
COMPILER_FLAGS = -std=c++11 -Wall -O2
LINKER_FLAGS = -lSDL2 -lSDL2_image -lSDL2_ttf
OBJ_NAME = oopquarium
all : $(OBJS)
	$(CC) $(OBJS) $(COMPILER_FLAGS) $(LINKER_FLAGS) -o $(OBJ_NAME)

	
g++ main.cpp oop.cpp aquarium.cpp coin.cpp entity.cpp fish.cpp food.cpp guppy.cpp piranha.cpp snail.cpp -o -std=c++11 -Wall -O2 -lSDL2 -lSDL2_image -lSDL2_ttf -o oopquarium